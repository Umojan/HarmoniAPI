# Application
APP_NAME=HarmoniAPI
APP_VERSION=0.1.0
DEBUG=false

# Database
# For local PostgreSQL: postgresql+asyncpg://postgres:postgres@localhost:5432/harmoni
# For remote: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/harmoni

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Admin
FIRST_ADMIN_EMAIL=admin@test.com
FIRST_ADMIN_PASSWORD=change-me-in-production

# File Upload
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE_MB=10

# Calculator
CALCULATOR_CALORIE_DEFICIT=500
CALCULATOR_CALORIE_SURPLUS=300
CALCULATOR_MIN_AGE=15
CALCULATOR_MAX_AGE=120
CALCULATOR_MIN_WEIGHT_KG=30
CALCULATOR_MAX_WEIGHT_KG=300
CALCULATOR_MIN_HEIGHT_CM=100
CALCULATOR_MAX_HEIGHT_CM=250
