# Application
APP_NAME=HarmoniAPI
APP_VERSION=0.1.0
DEBUG=false

# Database
# For local PostgreSQL: postgresql+asyncpg://postgres:postgres@localhost:5432/harmoni
# For remote: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/harmoni

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@harmoniapi.com

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Admin
FIRST_ADMIN_EMAIL=admin@test.com
FIRST_ADMIN_PASSWORD=change-me-in-production
